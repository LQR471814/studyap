{
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "incremental": true,
    "types": [
      "@cloudflare/workers-types/2023-07-01",
      "@types/jest"
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["**/*.ts", "tailwind.config.cjs"],
  "exclude": ["node_modules"]
}
