{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "target": "es2022",
    "module": "esnext",
    "moduleResolution": "bundler",
    "incremental": true,
    "types": [
      "@cloudflare/workers-types/2023-07-01",
      "@types/jest"
    ],
    "paths": {
      "@/*": ["./*"],
      "@ui-lib": ["./src/lib"],
      "@ui-lib/*": ["./src/lib/*"]
    }
  },
  "include": ["**/*.ts", "tailwind.config.cjs"],
  "exclude": ["node_modules"]
}
